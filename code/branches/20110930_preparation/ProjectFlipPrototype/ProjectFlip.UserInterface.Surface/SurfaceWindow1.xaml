<s:SurfaceWindow x:Class="ProjectFlip.UserInterface.Surface.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="ProjectFlip.UserInterface.Surface"
    >
    <s:SurfaceWindow.Resources>

      <DataTemplate x:Key="ProjectNoteTemplate">
               <DocumentViewer Document="{Binding Document}">
                </DocumentViewer>
        </DataTemplate>

        <DataTemplate x:Key="ProjectNoteButtonTemplate">
            <s:SurfaceButton Name="Button">
                <StackPanel>
                    <Image Width="100" Height="100" Source="{Binding Image}" />
                    <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </s:SurfaceButton>
        </DataTemplate>

    </s:SurfaceWindow.Resources>
        
  <Grid>
        <s:ScatterView Background="Gray" x:Name="scatterView" ItemsSource="{Binding ProjectNotes}" ItemTemplate="{Binding ProjectNoteTemplate}" />
  </Grid>
</s:SurfaceWindow>
