<s:SurfaceWindow x:Class="ProjectFlip.UserInterface.Surface.OverviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="ProjectFlip.UserInterface.Surface"
    >
    <s:SurfaceWindow.Resources>

        <DataTemplate x:Key="ProjectNoteButtonTemplate">
            <s:SurfaceButton Command="{Binding OpenWindowCommand}" >
                <StackPanel Width="240" Height="240" Orientation="Vertical"  HorizontalAlignment="Right">
                    <Image Width="190" Height="190" Source="{Binding Image}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Title}" TextTrimming="None" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center"/>
                </StackPanel>
            </s:SurfaceButton>
        </DataTemplate>
        
        <ItemsPanelTemplate x:Key="ItemPanelTemplate">
            <WrapPanel>
            </WrapPanel>
        </ItemsPanelTemplate>

    </s:SurfaceWindow.Resources>
        
  <Grid Background="Gray">
        <s:SurfaceListBox ItemsSource="{Binding ProjectNoteViewModels}" ItemTemplate="{StaticResource ProjectNoteButtonTemplate}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsPanel="{DynamicResource ItemPanelTemplate}">
        </s:SurfaceListBox>
  </Grid>
</s:SurfaceWindow>
